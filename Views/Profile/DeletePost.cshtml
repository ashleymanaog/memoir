@model ThomasianMemoir.Models.UserPost

<h2>Delete Post</h2>

<p>Are you sure you want to delete this post?</p>

<div>
    <h4>Post Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <!-- Display post details here -->
        <dt>Content</dt>
        <dd>@Model.Content</dd>
    </dl>
</div>

<form asp-action="ConfirmDelete" asp-route-postId="@Model.PostId" method="post">
    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
</form>
