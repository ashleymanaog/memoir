<!--BOTTOM SPACE-->
<div style="height:50px;"></div>

<!--CREATE POST MODAL-->
<div class="modal fade" id="createPostModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align:center; display:flex;">
                <h5 class="modal-title" style="flex:1;">
                    Write a post
                    <span class="text-muted" style="font-size: 15px; display:block;">Junior</span>
                </h5>
                <button type="button" class="close fa-solid fa-xmark" data-dismiss="modal" aria-label="Close" style="font-size:1.5rem; padding-top:1.1rem;">
                </button>
            </div>
            <div class="modal-body">
                <textarea class="textbox createPostTextarea" rows="10" placeholder="Share to Thomasians..."></textarea>
            </div>
            <div class="modal-footer card-footer card-footer-createPost">
                <button type="button" class="btn fa-regular fa-image btnPic"></button>
                <button type="button" class="btn fa-solid fa-video btnVid"></button>
                <button type="submit" class="btn btn-info btn-md center blueButton btnPost" data-dismiss="modal" id="btnPost">Post</button>
            </div>
        </div>
    </div>
</div>