            </div>
            <div style="max-height:600px; overflow:hidden;vertical-align: middle;">
                <div id="postCarousel" class="carousel" data-ride="carousel">
                    <a asp-controller="Dashboard" asp-action="Post" class="carousel-indicators" style="top:20px; justify-content:end;">
                        <div class="num indicatorBG"></div>
                    </a>
                    <div class="carousel-inner" style="max-height:600px; display:flex; align-items:center;">
                        <div class="blurredBG"></div>

                        <div class="carousel-item active">
                            <img src="../img/Sample_Banner.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img src="../img/BG/BG_Index.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img src="../img/BG/BG_Login.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img src="../img/Sample_Banner2.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#postCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#postCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-footer row">
            <div class="col-6">
                <button class="btn btnLike" for="like"><i class="fa-solid fa-thumbs-up" style="margin-right:10px;"></i>Like</button>
            </div>
            <div class="col-6">
                <a asp-controller="Dashboard" asp-action="Post" class="btn btnComment" for="comment"><i class="fa-solid fa-comment" style="margin-right:10px;"></i>Comment</a>
            </div>
        </div>
    </div>
