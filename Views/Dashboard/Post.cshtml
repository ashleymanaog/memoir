@{
    ViewData["Title"] = "Post";
    ViewData["CSSFile"] = "~/css/Post.css";
    ViewData["JSFile"] = "~/js/ViewPost.js";
}
<!--User Posts-->
<div class="col-lg-5 userPosts">
    <!--1st Post-->
    <div class="card userPostsCard">
        <div class="card-header" style="min-height:60px; position: relative;">
            <div class="infoPost">
                <div style="float:left; display:inline-block;">
                    <a asp-controller="Profile" asp-action="Index" style="pointer-events:auto; position: relative;">
                        <div class="profilePicPost">
                            <img src="~/img/avatars/Avatar2.png" class="profileImage" id="uploadProfilePicture-previewImg">
                        </div>
                    </a>
                </div>
                <div class="userInfo">
                    <span class="usernamePost btn"><a asp-controller="Profile" asp-action="Index" style="display:inline-block; pointer-events:auto; position: relative;">Username</a></span>
                    <span class="datePost">Posted on 11/04/23</span>
                </div>
            </div>
        </div>
        <div>
            <div class="row postCardInfo">
