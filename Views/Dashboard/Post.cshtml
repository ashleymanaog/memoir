            </div>
            <div style="max-height:600px; overflow:hidden;vertical-align: middle;" class="imagesDiv">
                <div id="postCarousel" class="carousel" data-ride="carousel">
                    <a asp-controller="Dashboard" asp-action="PostPictures" class="carousel-indicators" style="top:20px; justify-content:end;">
                        <div class="num indicatorBG"></div>
                    </a>
                    <div class="carousel-inner" style="min-height:200px;max-height:600px; display:flex; align-items:center;">
                        <div class="blurredBG"></div>
                        
                        <div class="carousel-item active">
                            <img src="../img/Sample_Banner.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img src="../img/BG/BG_Index.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img src="../img/BG/BG_Login.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img src="../img/Sample_Banner2.jpg" alt="Third slide">
                        </div>
                        
                    </div>
                    
                    <a class="carousel-control-prev" href="#postCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#postCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-footer row" style="overflow:hidden;">
            <div class="col-6">
                <button type="button" id="btnCommentDiv" style="text-align:center;" class="btn btnLike" onclick="">
                    <i class="fa-solid fa-thumbs-up" style="margin-right:10px;"></i>Like
                </button>
            </div>
            <div class="col-6">
                <button type="button" id="btnCommentDiv" style="text-align:center;" class="btn btnComment" onclick="commentOnTextarea()">
                    <i class="fa-solid fa-comment" style="margin-right:10px;"></i>Comment
                </button>
            </div>
            <hr style="height:0.5px; margin:0;">
            <div class="col-12" style="margin-bottom:20px;">
                <div class="commentDiv">
                    <div style="float:left; display:inline-block;">
                        <div class="profilePicComment">
                            <img src="~/img/avatars/Avatar2.png">
                        </div>
                    </div>
                    <div class="textareaCommentDiv">
                        <textarea rows="1" cols="50" id="profileDescription" name="profileDescription" form="editProfileDescription" class="textbox textarea" placeholder="Share your thoughts..." ></textarea>
                        <button type="submit" style="color: rgb(0, 0, 0); text-decoration:none; width:auto; height:40px;" class="btn btn-info btn-md center blueButton" id="btnSubmitComment">Comment</button>
                    </div>
                </div>
                <div class="commentDiv">
                    <div style="float:left; display:inline-block;">
                        <div class="profilePicComment">
                            <img src="~/img/avatars/Avatar2.png">
                        </div>
                    </div>
                    <span class="usernamePost btn" style="margin-left:70px; margin-bottom:5px;"><a asp-controller="Profile" asp-action="Index" style="display:inline-block; pointer-events:auto; position: relative;">Username</a></span>
