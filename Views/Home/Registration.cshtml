<section class="section1">
<div class="details">
  <!--Registration-->
  <form name="regForm" id="regForm" class="regForm" asp-action="Registration" method="POST" enctype="multipart/form-data">
    <div class="card">
        <h3 class="card-header" style="padding-top: 16px;">
        Register an Account</h3>
        <div class="row cardInfo" style="margin-top:20px;">
            <span class="text-danger" style="text-align:center;" id="spanErr">@Html.ValidationMessage("regErr")</span>
            <div class="col-md-5">
                <label asp-for="FirstName" class="form-label" style="padding:0; margin-bottom:0; margin-top:15px;">First Name</label>
                <span asp-validation-for="FirstName" class="errorSpan" id="firstnameError"></span>
            </div>
            <div class="col-md-7">
                <input asp-for="FirstName" type="text" class="form-control textbox" style="margin-top:8px;" id="firstname" name="firstname" placeholder="First Name">
            </div>
            <div class="col-md-5">
                <label asp-for="LastName" class="form-label" style="padding:0; margin-top:15px; margin-bottom:0;">Last Name</label>
                <span asp-validation-for="LastName" class="errorSpan" id="lastnameError"></span>
            </div>
            <div class="col-md-7">
                <input asp-for="LastName" type="text" class="form-control textbox" style="margin-top:8px;" id="lastname" name="lastname" placeholder="Last Name">
            </div>
            <div class="col-md-5">
                <label asp-for="Username" class="form-label" style="padding:0; margin-top:15px; margin-bottom:0;">Username</label>
                <span asp-validation-for="Username" class="errorSpan" id="usernameError"></span>
            </div>
            <div class="col-md-7">
                <input asp-for="Username" type="text" class="form-control textbox" style="margin-top:8px;" id="username" name="username" placeholder="Username">
            </div>
            <div class="col-md-5">
                <label asp-for="Email" class="form-label" style="padding:0; margin-top:15px; margin-bottom:0;">Email Address</label>
                <span asp-validation-for="Email" class="errorSpan" id="emailError"></span>
            </div>
            <div class="col-md-7">
                <input asp-for="Email" type="text" class="form-control textbox" style="margin-top:8px;" id="email" name="email" placeholder="Email Address">
            </div>
            <div class="col-md-5">
                <label asp-for="Password" class="form-label" style="padding:0; margin-top:15px; margin-bottom:0;">Password</label>
                <span asp-validation-for="Password" class="errorSpan" id="passwordError"></span>
            </div>
            <div class="col-md-7">
                <input asp-for="Password" type="password" class="form-control textbox" style="margin-top:8px;" id="password" name="password" placeholder="Password">
            </div>

            <div class="col-md-5">
                <label asp-for="YearLevel" class="form-label" style="padding:0; margin-top:15px; margin-bottom:0;">Year Level</label>
                <span asp-validation-for="YearLevel" vel" class="errorSpan" id="yearLevelError"></span>
            </div>

            <div class="col-md-7">
                <select id="yearLevel" class="form-select form-control dropdown option-placeholder">
                    <option value="placeholder" disabled selected hidden>Select a year level</option>
                    <option value="1st Year">1st Year</option>
                    <option value="2nd Year">2nd Year</option>
                    <option value="3rd Year">3rd Year</option>
                    <option value="4th Year">4th Year</option>
                    <option value="5th Year">5th Year</option>
                </select>
                <input asp-for="YearLevel" type="text" class="form-control textbox" style="margin-top:8px; display:none;" id="yearLevelTxt">
            </div>

            <div class="col-md-5">
                <label for="changeProfile" class="form-label" style="padding:0; margin-top:15px; margin-bottom:5px;">Profile Picture</label><br />
                <a href="javascript:void(0)" target="_self" style="color: rgb(0, 0, 0); text-decoration:none;">
                    <input type="button" class="btn btn-warning btn-md yellowButton" style="width:150px; margin-bottom:20px;" id="btnProfile" name="btnProfile" value="Choose Profile" data-toggle="modal" data-target="#changeProfileModal">
                </a>
                <div class="profilePic">
                    <img src="~/img/Avatars/Avatar1.png" class="profileImage" id="uploadProfilePicture-previewImg">
                </div>
            </div>
            
            <div class="col-md-7">
                <label for="changeBanner" class="form-label" style="padding:0; margin-top:15px; margin-bottom:5px;">Banner</label><br/>
                <a href="javascript:void(0)" target="_self" style="color: rgb(0, 0, 0); text-decoration:none;">
                    <input type="button" class="btn btn-warning btn-md yellowButton" style="width:150px; margin-bottom:20px;" id="btnBanner" name="btnBanner" value="Choose Banner" data-toggle="modal" data-target="#changeBannerModal">
                </a>
                <div class="banner">
                    <img src="~/img/Banners/Banner1.png" id="uploadBannerPhoto-previewImg">
                </div>
            </div>
        </div>
        <div style="padding-top:30px; padding-bottom:30px; text-align:center;">
            <a href="#" target="_self" style="color: rgb(0, 0, 0); text-decoration: none; width: 300px;"><input type="submit" class="btn btn-info btn-md center blueButton btnForm" id="btnRegister" name="btnEditPersonalInfo" value="Create Account"></a>
