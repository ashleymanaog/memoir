<script>
    //Dropdown option with placeholder text color
    const select = document.querySelector('select');
    
    function changeOptionColor() {
        if (document.getElementById('yearLevel').value != "placeholder") {
            select.classList.remove('option-placeholder');
            select.classList.add('option-color');
        }
    }

    select.addEventListener("click", function () {
        changeOptionColor();
        const span = document.getElementById("yearLevelTxt");
        const select = document.getElementById("yearLevel");
        var yearLevelSelect = select.value;
        //var studentClassification = select.options[select.selectedIndex].text;
        if (yearLevelSelect == "1st Year") {
            span.value = "1st Year";
        } else if (yearLevelSelect == "2nd Year") {
            span.value = "2nd Year";
        } else if (yearLevelSelect == "3rd Year") {
            span.value = "3rd Year";
        } else if (yearLevelSelect == "4th Year") {
            span.value = "4th Year";
        } else if (yearLevelSelect == "5th Year") {
            span.value = "5th Year";
        }
    });

    select.addEventListener("change", function () {
        changeOptionColor();
    });

    window.addEventListener("load", (event) => { 
        const span = document.getElementById("yearLevelTxt").value;
        if (span.length>0){
            select.value = span;
        }
    });

</script>